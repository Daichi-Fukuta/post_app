<%= form_with model: post, local: true do |form| %>
  <%= render 'shared/errors', obj: post %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.select :category_id, [ ["家庭", "1"], ["仕事", "2"], ["恋愛", "3"], ["人間関係", "4"], ["性", "5"], ["趣味", "6"], ["食事", "7"], ["お金", "8"] ], {}, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 10, class: 'form-control' %>
  </div>
  <%= form.submit '投稿する', class: 'btn btn-outline-primary' %>
<% end %>