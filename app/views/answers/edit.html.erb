<div class="col-md-10 offset-md-1 mt-3">
  <h2 class="text-center">回答編集</h2>
  <%= form_with model: [@post, @answer], local: true do |form| %>
    <%= render "shared/errors", obj: @answer %>
    <div class="form-group">
      <%= form.label :body, '相談事' %>
      <%= form.text_area :body, rows: 10, class: 'form-control' %>
    </div>
    <%= form.submit '回答を更新する', class: 'btn btn-primary' %>
    <%= link_to '戻る', post_answer_path(@post, @answer), class: 'btn btn-secondary' %>
  <% end %>
</div>